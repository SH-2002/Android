<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/parentLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/chatBackground"
    tools:context=".activities.DetailsActivity">

    <TextView
        android:fontFamily="@font/roboto_slab"
        android:id="@+id/heading"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/fab_margin"
        android:paddingStart="@dimen/fab_margin"
        android:paddingEnd="0dp"
        android:textColor="@android:color/white"
        android:textSize="@dimen/textSize24"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="@string/setup" />

    <RelativeLayout
        android:layout_marginTop="60dp"
        android:id="@+id/subParent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_margin="@dimen/fab_margin_half"
        android:padding="@dimen/fab_margin_half"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <!--        <ImageView-->
        <!--            android:id="@+id/imageView"-->
        <!--            android:layout_width="225dp"-->
        <!--            android:layout_height="150dp"-->
        <!--            android:contentDescription="@string/send_image"-->
        <!--            android:scaleType="centerCrop"-->
        <!--            tools:src="@drawable/laptop" />-->

        <androidx.viewpager.widget.ViewPager
            android:id="@+id/detailsImageViewPager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:clipToPadding="false"
            android:foregroundGravity="center"
            android:overScrollMode="never" />

        <ImageView
            android:id="@+id/previous"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_margin="@dimen/fab_margin_half"
            android:contentDescription="@string/next_image"
            android:src="@drawable/ic_previous"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@id/detailsImageViewPager"
            android:layout_centerVertical="true"
            android:layout_margin="@dimen/fab_margin_half"
            android:contentDescription="@string/next_image"
            android:src="@drawable/ic_next_"
            android:visibility="gone" />


    </RelativeLayout>

    <HorizontalScrollView
        android:id="@+id/scrollLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:paddingStart="@dimen/fab_margin_half"
        android:paddingTop="@dimen/fab_margin_half"
        android:paddingEnd="@dimen/fab_margin_half"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>